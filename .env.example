# MongoDB Connection URI
# For local MongoDB: mongodb://localhost:27017/bookmyhall
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/bookmyhall
MONGODB_URI=your_mongodb_connection_string_here

# Server Port
PORT=5000

# JWT Secret Key (Change this to a secure random string in production)
JWT_SECRET=your-secret-key-change-this-in-production

# Node Environment
NODE_ENV=development

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id-here

# Apple OAuth (Optional)
APPLE_CLIENT_ID=your-apple-client-id-here
APPLE_TEAM_ID=your-apple-team-id-here
APPLE_KEY_ID=your-apple-key-id-here

# Cloudinary Configuration (Required for image/video uploads)
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
