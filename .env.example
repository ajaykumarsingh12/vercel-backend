# MongoDB Connection URI
MONGODB_URI=your_mongodb_connection_string_here

# Server Port
PORT=5000

# JWT Secret Key (Change this to a secure random string in production)
JWT_SECRET=your-secret-key-change-this-in-production

# Node Environment
NODE_ENV=development

# Cloudinary Configuration (Required for image/video uploads)
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Admin Account Creation (Optional - only for createAdmin.js script)
# Add these temporarily when you need to create a new admin account
# Remove from .env after creating admin for security
ADMIN_NAME=Your Full Name
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=YourSecurePassword123!
ADMIN_PHONE=1234567890
